<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Tic Tac Toe"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/Title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold|italic"/>

    <ImageView
            android:layout_height="236dp"
            app:srcCompat="@drawable/img_tictactoe"
            android:id="@+id/imageView"
            app:layout_constraintBottom_toTopOf="@id/Title"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:layout_width="0dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            app:layout_constraintTop_toTopOf="parent" tools:layout_editor_absoluteX="0dp"
            app:layout_constraintVertical_bias="1.0"/>

    <TextView
            android:text="One app, one game. Made by Louis Matonti for Android exam on Dec 3rd."
            android:layout_width="384dp"
            android:layout_height="53dp"
            android:id="@+id/desc"
            app:layout_constraintTop_toBottomOf="@id/Title"/>

    <TextView
            android:text="Please enter your name :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textname"
            app:layout_constraintTop_toBottomOf="@id/desc"/>

    <EditText
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            app:layout_constraintTop_toBottomOf="@id/textname"
            android:id="@+id/editName"/>

    <Button
            android:text="START"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@id/editName"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="148dp" android:layout_marginStart="148dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="148dp"
            android:layout_marginRight="148dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textView4"/>/>

    <ImageView
            android:layout_width="90dp"
            android:layout_height="51dp"
            app:srcCompat="@drawable/img_epita"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/imageView2"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"/>

    <TextView
            android:text="Made at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_paddingRight="5dp"
            android:id="@+id/textView4"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="28dp"/>

</android.support.constraint.ConstraintLayout>