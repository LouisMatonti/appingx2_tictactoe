<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:text="Payer turn : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginLeft="16dp"
            tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="53dp"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout"/>
    <TextView
            android:layout_width="114dp"
            android:layout_height="28dp"
            android:id="@+id/PlayerName"
            android:text="0 (GUEST)"
            app:layout_constraintLeft_toRightOf="@id/textView"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="68dp" android:textStyle="bold"
            android:textSize="24sp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="112dp"
            android:layout_marginRight="112dp" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/Guest"/>

    <TextView
            android:layout_width="114dp"
            android:layout_height="28dp"
            android:id="@+id/Guest"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="X (Name)"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/PlayerName"
            android:layout_marginTop="12dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="111dp"
            android:layout_marginRight="111dp" app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginLeft="69dp" android:layout_marginStart="69dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout"/>

    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/Guest"
            android:showDividers="middle"
            tools:ignore="MissingConstraints" android:layout_marginTop="16dp" android:id="@+id/tableLayout"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="34dp" android:layout_marginRight="34dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" android:layout_marginBottom="99dp"
            app:layout_constraintBottom_toBottomOf="parent">
        <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:id="@+id/button1"
                    android:text="">
            </Button>
            <Button
                    android:id="@+id/button2"
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:text="">
            </Button>
            <Button
                    android:id="@+id/button3"
                    android:text=""
                    android:layout_height="100dp"
                    android:layout_width="100dp">
            </Button>
        </TableRow>
        <TableRow
                android:id="@+id/tableRow"
                android:layout_height="100dp"
                android:layout_width="100dp">
            <Button
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:id="@+id/button4"
                    android:text="">
            </Button>
            <Button
                    android:id="@+id/button5"
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:text="">
            </Button>
            <Button
                    android:id="@+id/button6"
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:text="">
            </Button>
        </TableRow>
        <TableRow
                android:id="@+id/tableRow3"
                android:layout_height="100dp"
                android:layout_width="100dp">
            <Button
                    android:id="@+id/button7"
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:text="">
            </Button>
            <Button
                    android:id="@+id/button8"
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:text="">
            </Button>
            <Button
                    android:id="@+id/button9"
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:text="">
            </Button>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>